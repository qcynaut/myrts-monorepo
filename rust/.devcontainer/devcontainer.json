// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
	"name": "Rust",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/rust:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
		"ghcr.io/schlich/devcontainer-features/starship:0": {},
		"ghcr.io/guiyomh/features/just:0": {}
	},
	"mounts": [
		{
			"source": "devcontainer-cargo-cache-${devcontainerId}",
			"target": "/usr/local/cargo",
			"type": "volume"
		},
		// Forward SSH Key for git operations
		{
			"source": "${localEnv:HOME}/.ssh",
			"target": "/home/vscode/.ssh",
			"type": "bind"
		}
	],
	"remoteEnv": {
		"SHELL": "/usr/bin/fish",
		"FISH_CONFIG_DIR": "/home/vscode/.config/fish"
	},
	"postCreateCommand": "echo 'starship init fish | source' >> /home/vscode/.config/fish/config.fish",
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"vadimcn.vscode-lldb",
				"ms-azuretools.vscode-containers",
				"ms-azuretools.vscode-docker",
				"tamasfe.even-better-toml",
				"rust-lang.rust-analyzer",
				"fill-labs.dependi",
				"redhat.vscode-yaml",
				"eamodio.gitlens",
				"skellock.just"
			]
		}
	}
}